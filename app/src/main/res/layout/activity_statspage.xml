<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primarycolor">

        <TextView
            android:id="@+id/text_userstats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/user_stats"
            android:textAlignment="center"
            android:textColor="@color/Secondarycolor"
            android:textSize="30sp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerBar"
        android:layout_above="@id/navBar"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/walking_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/walking_stats"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:background="@drawable/roundedcorner_stats"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_walking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/walking_stats"
                android:layout_margin="10dp"
                 />

            <TextView
                android:id="@+id/running_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/running_stats"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_below="@id/chart_walking"
                android:textSize="35sp"
                android:background="@drawable/roundedcorner_stats"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_running"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/running_stats"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/weights_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weights_stats"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_below="@id/chart_running"
                android:textSize="35sp"
                android:background="@drawable/roundedcorner_stats"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_weights"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/weights_stats"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/swimming_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/swimming_stats"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_below="@id/chart_weights"
                android:textSize="35sp"
                android:background="@drawable/roundedcorner_stats"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_swimming"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/swimming_stats"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/biking_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/biking_stats"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_below="@id/chart_swimming"
                android:textSize="35sp"
                android:background="@drawable/roundedcorner_stats"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_biking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/biking_stats"
                android:layout_margin="10dp"
                />

        </RelativeLayout>


    </ScrollView>


    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/roundedcorner_top"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/homelogo"
            android:tag="Homepage"
            android:onClick="changescreen"/>

        <ImageButton
            android:id="@+id/notifyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/notifications"
            android:tag="Notificationpage"
            android:onClick="changescreen"/>

        <ImageButton
            android:id="@+id/statsbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/activity"
            android:tag="Statspage"
            android:onClick="changescreen"/>

        <ImageButton
            android:id="@+id/addscreenbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/addchart"
            android:tag="Activitiespage"
            android:onClick="changescreen"/>
    </LinearLayout>



</RelativeLayout>